SUBDIRS    = libsrc src

all:
	set -e; for i in $(SUBDIRS); do\
	  cd $$i ;\
	  $(MAKE) all ;\
	  cd .. ;\
	done

install:
	set -e; for i in $(SUBDIRS); do\
	  cd $$i ;\
	  $(MAKE) install ;\
	  cd .. ;\
	done

.PHONY: clean dep 
clean:
	set -e; for i in $(SUBDIRS); do\
	  cd $$i ;\
	  $(MAKE) clean ;\
	  cd .. ;\
	done

realclean:
	set -e; for i in $(SUBDIRS); do\
	  cd $$i ;\
	  $(MAKE) realclean ;\
	  cd .. ;\
	done
	rm -fv Makefile config.cache config.status config.log


## Suffixes ##
.c.o:
	$(CC) -c $(INCLUDE) $(CFLAGS) $(GGDB) $(PG) $<

dep:
	set -e; for i in $(SUBDIRS); do\
	  cd $$i ;\
	  $(MAKE) dep ;\
	  cd .. ;\
	done

-include .depend
